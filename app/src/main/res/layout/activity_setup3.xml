<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Setup1Activity"
    android:background="@drawable/background2">


    <TextView
        android:id="@+id/txt_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/rozha_one"
        android:paddingLeft="100px"
        android:paddingTop="80px"
        android:text="Finally, we need to"
        android:textColor="#000000"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/txt_status2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rozha_one"
        android:paddingLeft="100px"
        android:text="set the waiting"
        android:textColor="#000000"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/txt_status3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rozha_one"
        android:paddingLeft="100px"
        android:text="time and trigger  "
        android:textColor="#000000"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/txt_status4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rozha_one"
        android:paddingLeft="100px"
        android:text="distance to avoid"
        android:textColor="#000000"
        android:textSize="26dp" />
    <TextView
        android:id="@+id/txt_status5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rozha_one"
        android:paddingLeft="100px"
        android:text="false positive"
        android:textColor="#000000"
        android:textSize="26dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/durationtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rozha_one"
            android:paddingLeft="100px"
            android:paddingTop="150px"
            android:text="Wait time (mins): "
            android:textColor="#000000"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/waitingTime"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="70px"
            android:layout_marginRight="120px"
            android:layout_marginTop="-5dp"
            android:background="@drawable/roundededittext"
            android:hint="recommend 30 mins"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:textSize="14dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/distancetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rozha_one"
            android:paddingLeft="100px"
            android:paddingTop="50px"
            android:text="Distance (m): "
            android:textColor="#000000"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/distance"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="150px"
            android:layout_marginTop="-5dp"
            android:layout_marginRight="120px"
            android:background="@drawable/roundededittext"
            android:hint="recommend 15m"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:textSize="14dp" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_next3"
        android:layout_width="600px"
        android:layout_marginTop="350px"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@font/rozha_one"
        android:text="DONE"
        android:textColor="@color/white"
        android:textSize="56px"
        android:enabled="true"
        android:layout_gravity="center"
        />
</LinearLayout>