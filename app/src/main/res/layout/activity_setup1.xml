<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Setup1Activity"
    android:background="@drawable/background2">


    <TextView
        android:id="@+id/txt_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/rozha_one"
        android:paddingLeft="100px"
        android:paddingTop="80px"
        android:text="Welcome!"
        android:textColor="#000000"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/txt_status2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rozha_one"
        android:paddingLeft="100px"
        android:text="First, We need an"
        android:textColor="#000000"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/txt_status3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rozha_one"
        android:paddingLeft="100px"
        android:text="emergency "
        android:textColor="#000000"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/txt_status4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rozha_one"
        android:paddingLeft="100px"
        android:text="contact"
        android:textColor="#000000"
        android:textSize="26dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/countryCodeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rozha_one"
            android:paddingTop="150px"
            android:paddingLeft="100px"
            android:text="Country Code: "
            android:textColor="#000000"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/countryCode"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="18dp"
            android:layout_marginLeft="70px"
            android:layout_marginRight="120px"
            android:paddingLeft="20dp"
            android:background="@drawable/roundededittext"
            android:inputType="number"
            android:hint="852"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/phoneNumberTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rozha_one"
            android:paddingTop="50px"
            android:paddingLeft="100px"
            android:text="Phone Number: "
            android:textColor="#000000"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="40px"
            android:layout_marginRight="120px"
            android:background="@drawable/roundededittext"
            android:hint="21800000"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:textSize="18dp"

            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_next1"
        android:layout_width="600px"
        android:layout_marginTop="350px"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@font/rozha_one"
        android:text="NEXT"
        android:textColor="@color/white"
        android:textSize="56px"
        android:enabled="true"
        android:layout_gravity="center"
        />
</LinearLayout>