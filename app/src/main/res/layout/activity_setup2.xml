<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Setup2Activity"
    android:background="@drawable/background2">
    <ScrollView android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/rozha_one"
                android:paddingLeft="100px"
                android:paddingTop="80px"
                android:text="Second,"
                android:textColor="#000000"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/txt_status1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rozha_one"
                android:paddingLeft="100px"
                android:text="we need some"
                android:textColor="#000000"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/txt_status2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rozha_one"
                android:paddingLeft="100px"
                android:text="target"
                android:textColor="#000000"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/txt_status3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rozha_one"
                android:paddingLeft="100px"
                android:text="locations"
                android:textColor="#000000"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/defaulttxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rozha_one"
                android:layout_marginTop="100px"
                android:layout_marginBottom="50px"
                android:paddingTop="70px"
                android:paddingLeft="100px"
                android:text="Default: "
                android:textColor="#000000"
                android:textSize="20dp" />
            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="500px"
                android:fontFamily="@font/rozha_one"
                android:layout_height="wrap_content"
                android:text="Police Stations"
                android:textSize="10dp"
                android:layout_marginLeft="250px"
                android:scaleX="1.70"
                android:scaleY="1.70"/>

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="500px"
                android:fontFamily="@font/rozha_one"
                android:layout_height="wrap_content"
                android:text="Hong Kong - China border"
                android:textSize="10dp"
                android:layout_marginLeft="250px"
                android:layout_marginTop="40px"
                android:scaleX="1.70"
                android:scaleY="1.70"/>

            <TextView
                android:id="@+id/othersTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rozha_one"
                android:layout_marginTop="20px"
                android:paddingTop="70px"
                android:paddingLeft="100px"
                android:text="Others: "
                android:textColor="#000000"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20px"
                >

                <TextView
                    android:id="@+id/laditubeTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rozha_one"

                    android:paddingLeft="100px"
                    android:text="Laditube: "
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/longitudeTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120px"
                    android:fontFamily="@font/rozha_one"
                    android:paddingLeft="150px"
                    android:text="Longitube: "
                    android:textColor="#000000"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20px"
                >

                <EditText
                    android:id="@+id/lad1"
                    android:layout_width="400px"
                    android:layout_height="30dp"
                    android:layout_marginLeft="100px"
                    android:background="@drawable/roundededittext"
                    android:hint="22.333676"
                    android:paddingLeft="20dp"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/long1"
                    android:layout_width="400px"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50px"
                    android:background="@drawable/roundededittext"
                    android:hint="114.169504"
                    android:paddingLeft="20dp"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20px"
                >

                <EditText
                    android:id="@+id/lad2"
                    android:layout_width="400px"
                    android:layout_height="30dp"
                    android:layout_marginLeft="100px"
                    android:background="@drawable/roundededittext"
                    android:hint="22.333676"
                    android:paddingLeft="20dp"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/long2"
                    android:layout_width="400px"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50px"
                    android:background="@drawable/roundededittext"
                    android:hint="114.169504"
                    android:paddingLeft="20dp"
                    android:textSize="16dp" />
            </LinearLayout>


            <Button
                android:id="@+id/btn_next2"
                android:layout_width="600px"
                android:layout_marginTop="150px"
                android:layout_marginBottom="150px"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedbutton"
                android:fontFamily="@font/rozha_one"
                android:text="NEXT"
                android:textColor="@color/white"
                android:textSize="56px"
                android:enabled="true"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </ScrollView>



</LinearLayout>